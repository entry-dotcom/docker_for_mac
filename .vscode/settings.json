{
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
    },
    "[c++]": {
        "editor.tabSize" : 4
    },
    "python.formatting.provider": "none",
    "autopep8.args": [
        "--aggressive",
        "--indent-size=4",
        "--max-line-length",
        "160",
        "--ignore=E111, E114, E402, E501"
    ],
    "flake8.args": [
        "--ignore=W293, W504, E111, E114, E402, E501"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "files.associations": {
        "iostream": "cpp",
        "random": "cpp",
        "cmath": "cpp",
        "deque": "cpp",
        "string": "cpp",
        "vector": "cpp",
        "*.tcc": "cpp",
        "chrono": "cpp",
        "complex": "cpp",
        "array": "cpp",
        "string_view": "cpp",
        "span": "cpp"
    }
}