{
    "version": "2.0.0",
    "tasks": [
        {            
            "label": "abc_dl",
            "type": "shell",
            "command": "${workspaceFolder}/cmd/abc_dl.sh ${input:abc_dl}",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
            }
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "cd ${fileDirname} && ${file}",
                "-std=gnu++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "-DONLINE_JUDGE",
                "-I/opt/boost/gcc/include",
                "-L/opt/boost/gcc/lib",
                "-I/lib/ac-library",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
                
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "arc_dl",
            "type": "shell",
            "command": "${workspaceFolder}/cmd/arc_dl.sh ${input:arc_dl}",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "other_dl",
            "type": "shell",
            "command": "${workspaceFolder}/cmd/other_dl.sh ${input:other_dl}",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "test_cpp",
            "type": "shell",
            "command": "oj t -d ${fileDirname}/tests/ -c ${fileDirname}/${fileBasenameNoExtension}.out -N",
            "dependsOn": [
                "compile_cpp"
            ],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "test_py",
            "type": "shell",
            "command": "oj t -c \"python3 ${fileDirname}/${fileBasenameNoExtension}.py\" -d ${fileDirname}/tests/",
            "dependsOn": [
                "compile_py"
            ],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "submit_cpp",
            "type": "shell",
            "command": "cd ${fileDirname} && acc submit ${file}",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "submit_py",
            "type": "shell",
            "command": "cd ${fileDirname} && acc submit ${file} -- -l 5055",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "execute",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "dependsOn": [
                "compile_cpp"
            ]
        },
        {
            "label": "execute with input.txt",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}.out < ${workspaceFolder}/templates/input.txt",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "dependsOn": [
                "compile_cpp"
            ]
        },
        {
            "label": "compile_cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=gnu++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "-DONLINE_JUDGE",
                "-I/opt/boost/gcc/include",
                "-L/opt/boost/gcc/lib",
                "-I/lib/ac-library",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "compile_py",
            "type": "shell",
            "command": "oj",
            "args": [
                "t",
                "-c",
                "\"python3",
                "${fileDirname}/${fileBasenameNoExtension}.py\"",
                "-d",
                "${fileDirname}/tests/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "test_basic",
            "type": "shell",
            "command": "oj t -d ./tests/"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc アクティブなファイルのビルド",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "デバッガーによって生成されたタスク。"
        }
    ],
    "inputs": [
        {
            "id": "abc_dl",
            "description": "ダウンロードするabcのコンテスト名を入力してください (例: abc123)",
            "type": "promptString"
        },
        {
            "id": "arc_dl",
            "description": "ダウンロードするarcのコンテスト名を入力してください (例: arc123)",
            "type": "promptString"
        },
        {
            "id": "other_dl",
            "description": "ダウンロードするコンテスト名を入力してください (例: practice)",
            "type": "promptString"
        }
    ]
}